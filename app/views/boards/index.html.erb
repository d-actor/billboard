<h1 class="center white-text">Music Billboards!</h1>
<hr>
<p class="center white-text">Click chart to view details</p>
<h5><%= button_to 'Home', root_path, method: :get, class: "btn waves-effect waves-light grey darken-3" %></h5>
<hr>

<div class="center blue-text">
  <h5><%= button_to 'Create New Chart', new_board_path, method: :get, class: "btn waves-effect waves-light grey darken-3" %></h5>
</div>

<div class="row">
  <% @boards.each do |board| %>
    <div class="col s4">
      <div class="card grey darken-3">
        <div class="card-content white-text">
          <span class="card-title center"><%= link_to board.name, board_songs_path(board) %></span>
        </div>
      </div>
    </div>
  <% end %>
</div>
<hr>
